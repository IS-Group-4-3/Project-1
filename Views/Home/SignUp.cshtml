
@{
    ViewData["Title"] = "Sign-Up";
}
@model AppointmentsListViewModel

<div class="text-center">
    <div>
        <h1 class="display-4">Sign-Up for a Tour!</h1>
    </div>
    <br />
    <div>
        <!--Adds a partial view that allows users to filter the list by day-->
       <vc:day-select />
    </div>
    <br />

    <table class="table table-bordered table-striped">

        <thead>
            <tr>
                <th>
                    Day
                </th>
                <th>
                    Time
                </th>
            </tr>
        </thead>
        <tbody>

            <!--Adds a button to each available time for users to fill out the form-->
            @foreach (var x in Model.appointments)
            {
                <tr>
                    <td>
                        @x.Day
                    </td>
                    <td>
                        <partial name="AppFormButton" model="x" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
