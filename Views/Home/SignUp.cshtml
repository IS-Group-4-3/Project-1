<table class="table table-bordered table-striped">
    @foreach (var y in Model.appointments)
    {
        <thead>
                <tr>
                    <th>
                        @y.Day
                    </th>
                </tr>

        </thead>
        @foreach (var x in Model.appointments)
        { 
        <tbody>
            <tr>
                <td>
                    @x.Hour
                    @x.AmPm
                </td>
            </tr>

        </tbody>
        }
    }
    </table>