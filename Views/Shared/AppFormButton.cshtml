@model Appointment
@if (!Model.Available)
{
    <form>
        <span class="card-text p-1">
            <button type="submit" class="btn btn-danger">
                @Model.Hour
                @Model.AmPm
                | Unavailable
            </button>
        </span>
    </form>
}
else
{
    <form id="@Model.AppointmentID" asp-controller="Home" asp-action="Form" method="post">
        <input type="hidden" asp-for="AppointmentID" />
        <span class="card-text p-1">
            <button type="submit" class="btn btn-primary">
                @Model.Hour
                @Model.AmPm
                | Sign-Up!
            </button>
        </span>
    </form>
}
