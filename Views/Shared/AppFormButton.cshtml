@model Appointment 

<form id="@Model.AppointmentID" asp-controller="Home" asp-action="Form" method="post">
    <input type="hidden" asp-for="AppointmentID" />
    <span class="card-text p-1">
        <button type="submit" class="btn btn-primary">
            @Model.Hour
            @Model.AmPm
        </button>
    </span>
</form>
