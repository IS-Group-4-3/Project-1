@model Group

<div>
    <h5>Please Fill Out This Form to Reserve a Tour</h5>
    <br />
    <!--Viewbag to show the day and time-->
    <p>Appointment for @ViewBag.App[0].Day at  @ViewBag.App[0].Hour@ViewBag.App[0].AmPm</p>
</div>
<form method="post" asp-controller="Home" asp-action="Index">
    <div>
        <label asp-for="Name">Group Name: </label>
        <input asp-for="Name" required />
    </div>
    <br />
    <div>
        <label asp-for="Size">Size: </label>
        <input asp-for="Size" required />
    </div>
    <br />
    <div>
        <label asp-for="Email">Email: </label>
        <input asp-for="Email" required />
    </div>
    <br />
    <div>
        <label asp-for="Phone">Phone: </label>
        <input asp-for="Phone" />
    </div>
    <br />
    <input type="hidden" asp-for="AppointmentID" value="@ViewBag.App[0].AppointmentID"/>
    <button type="submit">Submit</button>
</form>
