@model IEnumerable<string>

<div class="d-flex justify-content-between">
    @foreach (string day in Model)
    {
        <a class="btn btn-block @(day == ViewBag.SelectedDay ? "btn-primary" : "btn-outline-secondary")"
           asp-action="SignUp" asp-controller="Home"
           asp-route-day="@day">
            @day
        </a>
    }
</div>